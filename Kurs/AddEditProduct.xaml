            </Label.Foreground>
        </Label>
        <Label x:Name="labelpass_Copy" Content="" HorizontalAlignment="Left" Margin="720,318,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="24"/>
